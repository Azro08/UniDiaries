<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edges_background">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="60dp"
        tools:src="@drawable/account_circle_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/textViewStudentName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:text = "Ivan Korshak"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/imageButtonAddStud"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/blue_add_icon"
        android:importantForAccessibility="no" />

    <ImageButton
        android:id="@+id/imageButtonRemoveStud"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/remove_icon"
        android:visibility="gone"
        android:importantForAccessibility="no" />

</LinearLayout>